{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "index.ts",
    "ensureHexFormat.ts",
    "lighten/index.ts",
    "darken/index.ts",
    "desaturate/index.ts",
    "saturate/index.ts",
    "test/*.ts"
  ]
}
